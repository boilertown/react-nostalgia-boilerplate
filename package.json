{
	"name": "react-nostalgia-boilerplate",
	"version": "0.0.0",
	"private": true,
	"description": "Full-pledged React boilerplate to quickly kickstart your applications",
	"repository": {
		"type": "git",
		"url": "https://github.com/boilertowns/react-nostalgia-boilerplate.git"
	},
	"scripts": {
		"build": "webpack --config webpack/webpack.prod.js",
		"dev": "webpack serve --config webpack/webpack.dev.js --port 2022",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"prepare": "husky install",
		"serve": "http-server ./build",
		"storybook": "start-storybook -p 6006",
		"storybook:build": "build-storybook",
		"test:jest": "jest",
		"test:jest:coverage": "jest --coverage",
		"test:e2e": "playwright test"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,mdx,yml,json}": [
			"prettier --write"
		]
	},
	"browserslist": [
		"defaults",
		"not dead",
		"not ie 11",
		"not op_mini all"
	],
	"dependencies": {
		"@babel/runtime": "^7.18.9",
		"core-js": "^3.23.5",
		"dayjs": "^1.11.3",
		"history": "^5.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-helmet-async": "^1.3.0",
		"react-router-dom": "^6.3.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@babel/core": "^7.18.9",
		"@babel/plugin-transform-runtime": "^7.18.9",
		"@babel/preset-env": "^7.18.9",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@playwright/test": "^1.24.2",
		"@storybook/addon-a11y": "^6.5.9",
		"@storybook/addon-actions": "^6.5.9",
		"@storybook/addon-essentials": "^6.5.9",
		"@storybook/addon-interactions": "^6.5.9",
		"@storybook/addon-links": "^6.5.9",
		"@storybook/builder-webpack5": "^6.5.9",
		"@storybook/manager-webpack5": "^6.5.9",
		"@storybook/react": "^6.5.9",
		"@storybook/testing-library": "^0.0.13",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.2.6",
		"@trivago/prettier-plugin-sort-imports": "^3.3.0",
		"@types/jest": "^28.1.6",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@types/styled-components": "^5.1.25",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@types/webpack-env": "^1.17.0",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"babel-loader": "^8.2.5",
		"copy-webpack-plugin": "^11.0.0",
		"css-minimizer-webpack-plugin": "^4.0.0",
		"dotenv": "^16.0.1",
		"dotenv-webpack": "^7.1.0",
		"eslint": "8.18.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-testing-library": "^5.5.1",
		"html-webpack-plugin": "^5.5.0",
		"http-server": "^14.1.1",
		"husky": "^8.0.0",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
		"jest-transform-stub": "^2.0.0",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.7",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.3",
		"webpack": "^5.73.0",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.9.3",
		"webpack-merge": "^5.8.0"
	},
	"engines": {
		"node": ">=16"
	}
}
