{
	"name": "react-nostalgia-boilerplate",
	"version": "0.0.0",
	"private": true,
	"description": "Full-pledged React boilerplate to quickly kickstart your applications",
	"repository": {
		"type": "git",
		"url": "https://github.com/boilertowns/react-nostalgia-boilerplate.git"
	},
	"scripts": {
		"build": "webpack --config webpack/webpack.prod.js",
		"dev": "webpack serve --config webpack/webpack.dev.js --port 2022",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache --cache-strategy content",
		"format:check": "prettier --check **/*.{js,ts,tsx,json,yml}",
		"serve": "http-server -p 2022 ./build",
		"storybook": "start-storybook -p 6006",
		"storybook:build": "build-storybook",
		"test": "jest",
		"test:e2e": "playwright test",
		"test:e2e:ci-run": "start-server-and-test serve http://localhost:2022 test:e2e"
	},
	"browserslist": [
		"defaults",
		"not dead",
		"not ie 11",
		"not op_mini all"
	],
	"dependencies": {
		"@babel/runtime": "^7.20.1",
		"core-js": "^3.26.1",
		"dayjs": "^1.11.6",
		"history": "^5.3.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-helmet-async": "^1.3.0",
		"react-router-dom": "^6.4.3",
		"styled-components": "^5.3.6"
	},
	"devDependencies": {
		"@babel/core": "^7.20.2",
		"@babel/plugin-transform-runtime": "^7.19.6",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@playwright/test": "^1.28.0",
		"@storybook/addon-a11y": "^6.5.13",
		"@storybook/addon-actions": "^6.5.13",
		"@storybook/addon-essentials": "^6.5.13",
		"@storybook/addon-interactions": "^6.5.13",
		"@storybook/addon-links": "^6.5.13",
		"@storybook/builder-webpack5": "^6.5.13",
		"@storybook/manager-webpack5": "^6.5.13",
		"@storybook/react": "^6.5.13",
		"@storybook/testing-library": "^0.0.13",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@trivago/prettier-plugin-sort-imports": "^3.4.0",
		"@types/jest": "^29.2.3",
		"@types/node": "^18.11.9",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.9",
		"@types/styled-components": "^5.1.26",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"babel-loader": "^9.1.0",
		"copy-webpack-plugin": "^11.0.0",
		"css-minimizer-webpack-plugin": "^4.2.2",
		"dotenv": "^16.0.3",
		"dotenv-webpack": "^8.0.1",
		"eslint": "8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.11",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-testing-library": "^5.9.1",
		"html-webpack-plugin": "^5.5.0",
		"http-server": "^14.1.1",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"jest-transform-stub": "^2.0.0",
		"prettier": "^2.6.2",
		"start-server-and-test": "^1.14.0",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"typescript": "^4.9.3",
		"webpack": "^5.75.0",
		"webpack-bundle-analyzer": "^4.7.0",
		"webpack-cli": "^5.0.0",
		"webpack-dev-server": "^4.11.1",
		"webpack-merge": "^5.8.0"
	},
	"engines": {
		"node": ">=16"
	}
}
